<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/mi_fondo_pantalla">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnVolverMapa"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/mapaimg"
                android:contentDescription="Volver al mapa"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antzinako Harresia"
                android:textSize="28sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto introductorio"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPlayPauseAudio"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="Reproducir/Pausar Audio"
                app:tint="@color/black"/>

            <SeekBar
                android:id="@+id/seekBarAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:progressTint="@color/black"
                android:thumbTint="@color/black"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasi Testa"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@color/mi_boton_principal"/>

        <LinearLayout
            android:id="@+id/layoutMuralla"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/pieza0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/muralla_0"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/pieza1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/muralla_1"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/pieza2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/muralla_2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/pieza3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/muralla_3"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/pieza4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/muralla_4"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pregunta"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/grupoOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/op1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 1"
                android:textColor="@color/black"
                android:buttonTint="@color/mi_boton_principal"/>

            <RadioButton
                android:id="@+id/op2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 2"
                android:textColor="@color/black"
                android:buttonTint="@color/mi_boton_principal"/>

            <RadioButton
                android:id="@+id/op3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opción 3"
                android:textColor="@color/black"
                android:buttonTint="@color/mi_boton_principal"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnResponder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erantzun"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@color/mi_boton_principal"/>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jarraitu"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:textColor="@color/white"
            app:backgroundTint="@color/mi_boton_principal"/>

    </LinearLayout>
</ScrollView>