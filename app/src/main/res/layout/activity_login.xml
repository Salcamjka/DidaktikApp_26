<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/mi_fondo_pantalla">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DidaktikApp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/mi_boton_principal"
        android:layout_marginBottom="48dp"/>

    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mascota_saludando"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Idatzi zure izena"
        app:boxStrokeColor="@color/mi_boton_principal"
        app:hintTextColor="@color/mi_boton_principal"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="SARTU"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/mi_boton_principal"
        android:textColor="@color/white"
        app:cornerRadius="12dp"/>

</LinearLayout>